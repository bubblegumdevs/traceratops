<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <Switch
        android:id="@+id/crash_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/filter_crashes"
        android:textSize="@dimen/primary_text_size"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/primary_text_size"
        android:layout_marginTop="16dp"
        android:text="@string/filter_log_level"/>

    <SeekBar
        android:id="@+id/level_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/level_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="@dimen/tertiary_text_size"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/tag_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filter_tag"
            android:textSize="@dimen/primary_text_size"/>

        <EditText
            android:id="@+id/tag_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:hint="@string/filter_tag_hint"
            android:textColorHint="@color/hint_text_color"
            android:textSize="@dimen/primary_text_size"/>
    </LinearLayout>

</LinearLayout>